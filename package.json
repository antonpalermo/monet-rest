{
  "name": "monet-rest",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "lint": "eslint .",
    "lint:fix": "prettier . --write",
    "test": "vitest run",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "drizzle:gen": "drizzle-kit generate",
    "drizzle:migrate:prod": "NODE_ENV='production' bun drizzle-kit migrate",
    "drizzle:migrate:dev": "NODE_ENV='development' bun drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-router": "^1.134.18",
    "better-auth": "^1.3.34",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.12",
    "lucide-react": "^0.555.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.14.0",
    "@cloudflare/vitest-pool-workers": "^0.10.3",
    "@eslint/js": "^9.37.0",
    "@tanstack/router-plugin": "^1.134.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.2.2",
    "vitest": "~3.2.0",
    "wrangler": "^4.4.0"
  }
}
