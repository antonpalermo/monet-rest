{
  "name": "monet-rest",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "lint": "eslint .",
    "lint:fix": "prettier . --write",
    "deploy": "wrangler deploy --minify",
    "deploy:dev": "wrangler deploy --minify --env development",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "drizzle:gen": "drizzle-kit generate",
    "drizzle:migrate:prod": "NODE_ENV='production' bun drizzle-kit migrate",
    "drizzle:migrate:dev": "NODE_ENV='development' bun drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.12",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.1",
    "wrangler": "^4.4.0"
  }
}
